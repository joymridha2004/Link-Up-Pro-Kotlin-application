<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".authentication.HomeFragment">

    <TextView
        android:id="@+id/homeFragmentTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Home Screen"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/HomeFragmentLogoutButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape_design"
        android:elevation="15dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Log out"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/homeFragmentTV"
        app:layout_constraintStart_toStartOf="@+id/homeFragmentTV"
        app:layout_constraintTop_toBottomOf="@+id/homeFragmentTV" />

</androidx.constraintlayout.widget.ConstraintLayout>